@page "/"
@using Testdotnet.Interface
@using Testdotnet.Model;
@rendermode InteractiveServer

<PageTitle>Login</PageTitle>

<style>
    body {
        margin: 0;
        padding: 0;
        background: #667eea;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        overflow: hidden;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    }

    html {
        height: 100%;
        overflow: hidden;
    }

    .gradient-bg {
        background: inherit;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        box-sizing: border-box;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.98);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 16px;
        width: 100%;
        max-width: 380px;
        padding: 1.5rem;
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }

    .form-label {
        padding-left: 12px;
        margin-bottom: 6px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .modern-input {
        border: 1px solid #e1e5e9;
        background: #f8f9fa;
        border-radius: 10px;
        padding: 12px 14px;
        width: 100%;
        box-sizing: border-box;
        font-size: 16px;
        transition: border-color 0.2s ease;
    }

        .modern-input:focus {
            background: white;
            border-color: #667eea;
            box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.15);
            outline: none;
        }

    .input-error {
        border-color: #dc3545;
        background: #fff5f5;
    }

    .gradient-btn {
        background: #667eea;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 14px;
        font-weight: 600;
        width: 100%;
        color: white;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .gradient-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 16px rgba(102, 126, 234, 0.25);
        }

        .gradient-btn:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.3);
        }

    .error-message {
        color: #dc3545;
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        padding-left: 12px;
    }

    .status-toast {
        position: fixed;
        top: 20px;
        right: 20px;
        background: white;
        border-radius: 10px;
        padding: 14px 18px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        border-left: 4px solid;
        max-width: 280px;
        z-index: 1000;
        animation: slideIn 0.25s ease;
    }

        .status-toast.success {
            border-left-color: #28a745;
            background: #f8fff9;
        }

        .status-toast.error {
            border-left-color: #dc3545;
            background: #fff5f5;
        }

        .status-toast.info {
            border-left-color: #17a2b8;
            background: #f0f9ff;
        }

    @@keyframes slideIn {
        from {
            transform: translateX(120%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .password-toggle-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #667eea;
        cursor: pointer;
        padding: 6px;
        border-radius: 5px;
        transition: background-color 0.2s ease;
        z-index: 10;
    }

        .password-toggle-btn:hover {
            background: #f0f2f5;
        }

    .password-input-container {
        position: relative;
        width: 100%;
    }

    .password-input {
        padding-right: 44px;
        width: 100%;
    }

    .password-toggle-btn i {
        font-size: 1.1rem;
    }


    @@media (max-height: 700px) and (orientation: landscape) {
        .gradient-bg {
            padding: 10px;
            align-items: flex-start;
            justify-content: center;
        }

        .glass-card {
            padding: 1rem;
            max-width: 350px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .text-center {
            margin-bottom: 0.75rem !important;
        }

        h2 {
            font-size: 1.2rem !important;
            margin-bottom: 0.3rem !important;
        }

        p.text-muted {
            font-size: 0.8rem !important;
            margin-bottom: 0 !important;
        }

        .mb-3 {
            margin-bottom: 0.75rem !important;
        }

        .mb-4 {
            margin-bottom: 1rem !important;
        }

        .modern-input {
            padding: 10px 12px;
            font-size: 14px;
        }

        .gradient-btn {
            padding: 12px;
            font-size: 0.9rem;
        }

        .form-label {
            margin-bottom: 4px;
            font-size: 0.85rem;
        }

        .password-toggle-btn {
            right: 8px;
            padding: 5px;
        }

            .password-toggle-btn i {
                font-size: 1rem;
            }

        .password-input {
            padding-right: 38px;
        }
    }

    @@media (max-height: 500px) and (orientation: landscape) {
        .gradient-bg {
            padding: 5px;
        }

        .glass-card {
            padding: 0.75rem;
            max-width: 320px;
            border-radius: 12px;
        }

        h2 {
            font-size: 1.1rem !important;
            margin-bottom: 0.2rem !important;
        }

        p.text-muted {
            display: none;
        }

        .mb-3 {
            margin-bottom: 0.5rem !important;
        }

        .mb-4 {
            margin-bottom: 0.75rem !important;
        }

        .modern-input {
            padding: 8px 10px;
            font-size: 13px;
        }

        .gradient-btn {
            padding: 10px;
            font-size: 0.85rem;
        }

        .form-label {
            margin-bottom: 3px;
            font-size: 0.8rem;
        }

        .error-message {
            font-size: 0.75rem;
            margin-top: 0.15rem;
        }

        .password-toggle-btn {
            right: 6px;
            padding: 4px;
        }

            .password-toggle-btn i {
                font-size: 0.9rem;
            }

        .password-input {
            padding-right: 32px;
        }
    }

    @@media (max-height: 400px) and (orientation: landscape) {
        .gradient-bg {
            padding: 2px;
        }

        .glass-card {
            padding: 0.5rem;
            max-width: 300px;
            border-radius: 10px;
        }

        h2 {
            font-size: 1rem !important;
            margin-bottom: 0.1rem !important;
        }

        .mb-3 {
            margin-bottom: 0.4rem !important;
        }

        .mb-4 {
            margin-bottom: 0.6rem !important;
        }

        .modern-input {
            padding: 6px 8px;
            font-size: 12px;
        }

        .gradient-btn {
            padding: 8px;
            font-size: 0.8rem;
        }

        .form-label {
            margin-bottom: 2px;
            font-size: 0.75rem;
            padding-left: 8px;
        }

        .error-message {
            font-size: 0.7rem;
            margin-top: 0.1rem;
            padding-left: 8px;
        }

        .password-toggle-btn {
            right: 5px;
            padding: 3px;
        }

            .password-toggle-btn i {
                font-size: 0.8rem;
            }

        .password-input {
            padding-right: 28px;
        }
    }

    @@media (max-height: 600px) and (orientation: portrait) {
        .gradient-bg {
            padding: 10px;
            align-items: flex-start;
        }

        .glass-card {
            padding: 1rem;
            margin-top: 10px;
        }
    }

    @@media (max-width: 768px) {
        .glass-card {
            backdrop-filter: none;
            -webkit-backdrop-filter: none;
        }

        .gradient-btn:hover {
            transform: none;
            box-shadow: none;
        }
    }

    * {
        box-sizing: border-box;
    }

    @@media (prefers-reduced-motion: reduce) {
        .modern-input,
        .gradient-btn,
        .status-toast {
            transition: none;
            animation: none;
        }
    }
</style>

<div class="gradient-bg">
    <div class="glass-card shadow-lg p-4">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-dark mb-2">Welcome Back</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Username</label>
            <input value="@loginModel.Username"
                   @oninput="OnUsernameInput"
                   class="form-control modern-input @(usernameError ? "input-error" : "")"
                   placeholder="Enter your email" />
            @if (usernameError)
            {
                <div class="error-message">
                    <i class="bi bi-exclamation-circle"></i>
                    @usernameErrorMessage
                </div>
            }
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold text-dark">Password</label>
            <div class="password-input-container">
                <input value="@loginModel.Password"
                       @oninput="OnPasswordInput"
                       type="@(showPassword ? "text" : "password")"
                       class="form-control modern-input password-input @(passwordError ? "input-error" : "")"
                       placeholder="Enter your password" />
                <button type="button"
                        @onclick="TogglePasswordVisibility"
                        class="password-toggle-btn"
                        title="@(showPassword ? "Hide password" : "Show password")">
                    <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                </button>
            </div>
            @if (passwordError)
            {
                <div class="error-message">
                    <i class="bi bi-exclamation-circle"></i>
                    @passwordErrorMessage
                </div>
            }
        </div>

        <button type="button"
                @onclick="HandleLogin"
                class="btn gradient-btn text-white w-100 py-3">
            @if (isLoading)
            {
                <span>
                    <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-2"></i>
                    Signing In...
                </span>
            }
            else
            {
                <span>Sign In</span>
            }
        </button>
    </div>
</div>

@if (showToast)
{
    <div class="status-toast @toastClass">
        <div class="d-flex align-items-center">
            <i class="bi @toastIcon me-2"></i>
            <span>@toastMessage</span>
            <button @onclick="HideToast" class="btn btn-sm btn-link ms-auto p-0">
                <i class="bi bi-x"></i>
            </button>
        </div>
    </div>
}


@code {
    private LoginModel loginModel = new();
    private string message = string.Empty;
    private string alertClass = "alert-success";

    private bool usernameError = false;
    private bool passwordError = false;
    private string usernameErrorMessage = "";
    private string passwordErrorMessage = "";
    private bool isLoading = false;
    private bool showPassword = false;

    private bool showToast = false;
    private string toastClass = "";
    private string toastIcon = "";
    private string toastMessage = "";

    [Inject] private ISoapService SoapService { get; set; } = null!;

    private void OnUsernameInput(ChangeEventArgs e)
    {
        loginModel.Username = e.Value?.ToString() ?? "";
        ValidateUsername();
        StateHasChanged();
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        loginModel.Password = e.Value?.ToString() ?? "";
        ValidatePassword();
        StateHasChanged();
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
        StateHasChanged();
    }

    private void ValidateUsername()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Username))
        {
            usernameError = true;
            usernameErrorMessage = "Email is required";
        }
        else if (!IsValidEmail(loginModel.Username))
        {
            usernameError = true;
            usernameErrorMessage = "Please enter a valid email address";
        }
        else
        {
            usernameError = false;
            usernameErrorMessage = "";
        }
    }

    private void ValidatePassword()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Password))
        {
            passwordError = true;
            passwordErrorMessage = "Password is required";
        }
        else if (loginModel.Password.Length < 3)
        {
            passwordError = true;
            passwordErrorMessage = "Password must be at least 3 characters";
        }
        else
        {
            passwordError = false;
            passwordErrorMessage = "";
        }
    }

    private bool IsValidEmail(string email)
    {
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private async Task HandleLogin()
    {
        ValidateUsername();
        ValidatePassword();

        if (usernameError || passwordError)
        {
            ShowToast("error", "bi-exclamation-triangle", "Please fix the errors above");
            return;
        }

        if (string.IsNullOrWhiteSpace(loginModel.Username) || string.IsNullOrWhiteSpace(loginModel.Password))
        {
            ShowToast("error", "bi-exclamation-triangle", "Please fill in all fields");
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            ShowToast("info", "bi-info-circle", "Processing login...");

            var result = await SoapService.LoginAsync(loginModel.Username, loginModel.Password);

            if (result.Success)
            {
                ShowToast("success", "bi-check-circle", "Login successful! Redirecting...");
            }
            else
            {
                ShowToast("error", "bi-exclamation-triangle", result.ErrorMessage ?? "Login failed");
            }
        }
        catch (Exception ex)
        {
            ShowToast("error", "bi-exclamation-triangle", $"Connection error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowToast(string type, string icon, string message)
    {
        toastClass = type;
        toastIcon = icon;
        toastMessage = message;
        showToast = true;
        StateHasChanged();

        _ = AutoHideToast();
    }

    private async Task AutoHideToast()
    {
        await Task.Delay(5000);
        HideToast();
    }

    private void HideToast()
    {
        showToast = false;
        StateHasChanged();
    }
}