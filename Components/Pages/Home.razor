@page "/"
@using Testdotnet.Interface
@using Testdotnet.Model;
@rendermode InteractiveServer

<PageTitle>Login</PageTitle>

<style>
  
    body {
        margin: 0 !important;
        padding: 0 !important;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        min-height: 100vh !important;
        overflow: hidden !important;
    }

    html {
        overflow: hidden !important;
    }

    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        height: 100vh !important;
        margin: 0 !important;
        padding: 0 !important;
        width: 100vw !important;
        overflow: hidden !important;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        max-height: 95vh;
    }

    .form-label {
        padding-left: 16px;
        margin-bottom: 6px;
        font-weight: 600;
    }

    .modern-input {
        border: 1px solid #e1e5e9;
        background: #f8f9fa;
        border-radius: 12px;
        padding: 12px 16px 12px 16px;
        transition: all 0.3s ease;
    }

        .modern-input:focus {
            background: white;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .input-error {
        border-color: #dc3545 !important;
        background: #fff5f5 !important;
    }

    .gradient-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        outline: none !important;
    }

        .gradient-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .gradient-btn:focus {
            outline: none !important;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.3) !important;
        }


    .error-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        padding-left: 16px;
    }

    .status-toast {
        position: fixed;
        top: 20px;
        right: 20px;
        background: white;
        border-radius: 12px;
        padding: 16px 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-left: 4px solid;
        max-width: 300px;
        z-index: 1000;
        animation: slideIn 0.3s ease;
    }

        .status-toast.success {
            border-left-color: #28a745;
            background: #f8fff9;
        }

        .status-toast.error {
            border-left-color: #dc3545;
            background: #fff5f5;
        }

        .status-toast.info {
            border-left-color: #17a2b8;
            background: #f0f9ff;
        }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .container-fluid {
        padding-left: 0 !important;
        padding-right: 0 !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
        overflow: hidden !important;
    }
</style>

<div class="gradient-bg d-flex align-items-center justify-content-center">
    <div class="glass-card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="bi bi-person-circle display-4 text-primary"></i>
            </div>
            <h2 class="fw-bold text-dark">Welcome Back</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Username</label>
            <input value="@loginModel.Username"
                   @oninput="OnUsernameInput"
                   class="form-control modern-input @(usernameError ? "input-error" : "")"
                   placeholder="Enter your email" />
            @if (usernameError)
            {
                <div class="error-message">
                    <i class="bi bi-exclamation-circle"></i>
                    @usernameErrorMessage
                </div>
            }
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold text-dark">Password</label>
            <input value="@loginModel.Password"
                   @oninput="OnPasswordInput"
                   type="password"
                   class="form-control modern-input @(passwordError ? "input-error" : "")"
                   placeholder="Enter your password" />
            @if (passwordError)
            {
                <div class="error-message">
                    <i class="bi bi-exclamation-circle"></i>
                    @passwordErrorMessage
                </div>
            }
        </div>

        <button type="button"
                @onclick="HandleLogin"
                class="btn gradient-btn text-white w-100 py-3">
            @if (isLoading)
            {
                <span>
                    <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-2"></i>
                    Signing In...
                </span>
            }
            else
            {
                <span>Sign In</span>
            }
        </button>
    </div>
</div>

@if (showToast)
{
    <div class="status-toast @toastClass">
        <div class="d-flex align-items-center">
            <i class="bi @toastIcon me-2"></i>
            <span>@toastMessage</span>
            <button @onclick="HideToast" class="btn btn-sm btn-link ms-auto p-0">
                <i class="bi bi-x"></i>
            </button>
        </div>
    </div>
}

@code {
    private LoginModel loginModel = new();
    private string message = string.Empty;
    private string alertClass = "alert-success";

    private bool usernameError = false;
    private bool passwordError = false;
    private string usernameErrorMessage = "";
    private string passwordErrorMessage = "";
    private bool isLoading = false;

    private bool showToast = false;
    private string toastClass = "";
    private string toastIcon = "";
    private string toastMessage = "";

    [Inject] private ISoapService SoapService { get; set; } = null!;

    private void OnUsernameInput(ChangeEventArgs e)
    {
        loginModel.Username = e.Value?.ToString() ?? "";
        ValidateUsername();
        StateHasChanged();
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        loginModel.Password = e.Value?.ToString() ?? "";
        ValidatePassword();
        StateHasChanged();
    }

    private void ValidateUsername()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Username))
        {
            usernameError = true;
            usernameErrorMessage = "Email is required";
        }
        else if (!IsValidEmail(loginModel.Username))
        {
            usernameError = true;
            usernameErrorMessage = "Please enter a valid email address";
        }
        else
        {
            usernameError = false;
            usernameErrorMessage = "";
        }
    }

    private void ValidatePassword()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Password))
        {
            passwordError = true;
            passwordErrorMessage = "Password is required";
        }
        else if (loginModel.Password.Length < 3)
        {
            passwordError = true;
            passwordErrorMessage = "Password must be at least 3 characters";
        }
        else
        {
            passwordError = false;
            passwordErrorMessage = "";
        }
    }

    private bool IsValidEmail(string email)
    {
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private async Task HandleLogin()
    {
        ValidateUsername();
        ValidatePassword();

        if (usernameError || passwordError)
        {
            ShowToast("error", "bi-exclamation-triangle", "Please fix the errors above");
            return;
        }

        if (string.IsNullOrWhiteSpace(loginModel.Username) || string.IsNullOrWhiteSpace(loginModel.Password))
        {
            ShowToast("error", "bi-exclamation-triangle", "Please fill in all fields");
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            ShowToast("info", "bi-info-circle", "Processing login...");

            var result = await SoapService.LoginAsync(loginModel.Username, loginModel.Password);

            if (result.Success)
            {
                ShowToast("success", "bi-check-circle", "Login successful! Redirecting...");
            }
            else
            {
                ShowToast("error", "bi-exclamation-triangle", result.ErrorMessage ?? "Login failed");
            }
        }
        catch (Exception ex)
        {
            ShowToast("error", "bi-exclamation-triangle", $"Connection error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowToast(string type, string icon, string message)
    {
        toastClass = type;
        toastIcon = icon;
        toastMessage = message;
        showToast = true;
        StateHasChanged();

        _ = AutoHideToast();
    }

    private async Task AutoHideToast()
    {
        await Task.Delay(5000);
        HideToast();
    }

    private void HideToast()
    {
        showToast = false;
        StateHasChanged();
    }
}