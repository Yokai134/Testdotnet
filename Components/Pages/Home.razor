        top: 20px;
        right: 20px;
        background: white;
        border-radius: 12px;
        padding: 16px 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-left: 4px solid;
        max-width: 300px;
        z-index: 1000;
        animation: slideIn 0.3s ease;
    }

        .status-toast.success {
            border-left-color: #28a745;
            background: #f8fff9;
        }

        .status-toast.error {
            border-left-color: #dc3545;
            background: #fff5f5;
        }

        .status-toast.info {
            border-left-color: #17a2b8;
            background: #f0f9ff;
        }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* Стили для кнопки показа пароля */
    .password-toggle-btn {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #667eea;
        cursor: pointer;
        padding: 8px;
        border-radius: 6px;
        transition: all 0.2s ease;
        z-index: 10;
    }

        .password-toggle-btn:hover {
            background: #f8f9fa;
            color: #764ba2;
        }

    .password-input-container {
        position: relative;
        width: 100%;
    }

    .password-input {
        padding-right: 50px !important;
        width: 100%;
    }

    .password-toggle-btn i {
        font-size: 1.2rem;
    }

