@page "/"
@using Testdotnet.Interface
@using Testdotnet.Model;
@rendermode InteractiveServer

<PageTitle>Login</PageTitle>

<style>

    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background: #667eea;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        font-family: system-ui, -apple-system, sans-serif;
    }

    .gradient-bg {
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: inherit; /* Наследует градиент от body */
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.98);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 16px;
        width: 100%;
        max-width: 380px;
        padding: 1.5rem;
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }
</style>

<div class="gradient-bg">
    <div class="glass-card shadow-lg p-4">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-dark mb-2">Welcome Back</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Username</label>
            <input value="@loginModel.Username"
                   @oninput="OnUsernameInput"
                   class="form-control modern-input @(usernameError ? "input-error" : "")"
                   placeholder="Enter your email" />
            @if (usernameError)
            {
                <div class="error-message">
                    <i class="bi bi-exclamation-circle"></i>
                    @usernameErrorMessage
                </div>
            }
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold text-dark">Password</label>
            <div class="password-input-container">
                <input value="@loginModel.Password"
                       @oninput="OnPasswordInput"
                       type="@(showPassword ? "text" : "password")"
                       class="form-control modern-input password-input @(passwordError ? "input-error" : "")"
                       placeholder="Enter your password" />
                <button type="button"
                        @onclick="TogglePasswordVisibility"
                        class="password-toggle-btn"
                        title="@(showPassword ? "Hide password" : "Show password")">
                    <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                </button>
            </div>
            @if (passwordError)
            {
                <div class="error-message">
                    <i class="bi bi-exclamation-circle"></i>
                    @passwordErrorMessage
                </div>
            }
        </div>

        <button type="button"
                @onclick="HandleLogin"
                class="btn gradient-btn text-white w-100 py-3">
            @if (isLoading)
            {
                <span>
                    <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-2"></i>
                    Signing In...
                </span>
            }
            else
            {
                <span>Sign In</span>
            }
        </button>
    </div>
</div>

@if (showToast)
{
    <div class="status-toast @toastClass">
        <div class="d-flex align-items-center">
            <i class="bi @toastIcon me-2"></i>
            <span>@toastMessage</span>
            <button @onclick="HideToast" class="btn btn-sm btn-link ms-auto p-0">
                <i class="bi bi-x"></i>
            </button>
        </div>
    </div>
}


@code {
    private LoginModel loginModel = new();
    private string message = string.Empty;
    private string alertClass = "alert-success";

    private bool usernameError = false;
    private bool passwordError = false;
    private string usernameErrorMessage = "";
    private string passwordErrorMessage = "";
    private bool isLoading = false;
    private bool showPassword = false;

    private bool showToast = false;
    private string toastClass = "";
    private string toastIcon = "";
    private string toastMessage = "";

    [Inject] private ISoapService SoapService { get; set; } = null!;

    private void OnUsernameInput(ChangeEventArgs e)
    {
        loginModel.Username = e.Value?.ToString() ?? "";
        ValidateUsername();
        StateHasChanged();
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        loginModel.Password = e.Value?.ToString() ?? "";
        ValidatePassword();
        StateHasChanged();
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
        StateHasChanged();
    }

    private void ValidateUsername()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Username))
        {
            usernameError = true;
            usernameErrorMessage = "Email is required";
        }
        else if (!IsValidEmail(loginModel.Username))
        {
            usernameError = true;
            usernameErrorMessage = "Please enter a valid email address";
        }
        else
        {
            usernameError = false;
            usernameErrorMessage = "";
        }
    }

    private void ValidatePassword()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Password))
        {
            passwordError = true;
            passwordErrorMessage = "Password is required";
        }
        else if (loginModel.Password.Length < 3)
        {
            passwordError = true;
            passwordErrorMessage = "Password must be at least 3 characters";
        }
        else
        {
            passwordError = false;
            passwordErrorMessage = "";
        }
    }

    private bool IsValidEmail(string email)
    {
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private async Task HandleLogin()
    {
        ValidateUsername();
        ValidatePassword();

        if (usernameError || passwordError)
        {
            ShowToast("error", "bi-exclamation-triangle", "Please fix the errors above");
            return;
        }

        if (string.IsNullOrWhiteSpace(loginModel.Username) || string.IsNullOrWhiteSpace(loginModel.Password))
        {
            ShowToast("error", "bi-exclamation-triangle", "Please fill in all fields");
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            ShowToast("info", "bi-info-circle", "Processing login...");

            var result = await SoapService.LoginAsync(loginModel.Username, loginModel.Password);

            if (result.Success)
            {
                ShowToast("success", "bi-check-circle", "Login successful! Redirecting...");
            }
            else
            {
                ShowToast("error", "bi-exclamation-triangle", result.ErrorMessage ?? "Login failed");
            }
        }
        catch (Exception ex)
        {
            ShowToast("error", "bi-exclamation-triangle", $"Connection error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowToast(string type, string icon, string message)
    {
        toastClass = type;
        toastIcon = icon;
        toastMessage = message;
        showToast = true;
        StateHasChanged();

        _ = AutoHideToast();
    }

    private async Task AutoHideToast()
    {
        await Task.Delay(5000);
        HideToast();
    }

    private void HideToast()
    {
        showToast = false;
        StateHasChanged();
    }
}